	"version": "0.2.0",
	"configurations": [

		{
			"name": "Launch Viewer (Chrome)",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8000",
			"webRoot": "${workspaceRoot}/src",
			"sourceMaps": true,
			"preLaunchTask": "start",
			"userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
			"runtimeArgs": [
				"--enable-unsafe-es3-apis"
			]
		}
	]
}